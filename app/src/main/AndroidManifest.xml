<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lu.lianchyn.bengrocer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Manager"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity android:name=".InventoryStaff" />
        <activity android:name=".Cashier"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateUnchanged|adjustPan"/>
        <activity android:name=".Profile" />
        <activity android:name=".AboutUs" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".EditProfile"></activity>
        <activity
            android:name=".StockMgmt"
            android:label="@string/title_activity_stock_mgmt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StockActivity" />
        <activity
            android:name=".AddStock"
            android:parentActivityName=".StockActivity" />
        <activity android:name=".EditActivity"
            android:parentActivityName=".StockActivity"></activity>
    </application>

</manifest>